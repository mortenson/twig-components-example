<style inline href="./tce-hero.scss"></style>
<div class="wrapper">
  <div class="media">
  {% if src %}
    <img src="{{ src | escape }}" />
  {% else %}
    <slot name="media"></slot>
  {% endif %}
  </div>
  <div class="inner {{ align | escape }}">
    {% if text %}
      <h1>{{ text | escape }}</h1>
    {% endif %}
    {% if subtext %}
      <p>{{ subtext | escape }}</p>
    {% endif %}
    {% if callout_href and callout_text %}
      <a href="{{ callout_href | escape }}">{{ callout_text | escape }}</a>
    {% endif %}
  </div>
</div>
